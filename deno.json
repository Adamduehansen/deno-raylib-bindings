{
  "name": "@adamduehansen/raylib-bindings",
  "version": "0.1.2",
  "tasks": {
    "gemcatcher": "deno run --allow-ffi ./games/gem-catcher/main.ts",
    "gemcatcher:compile": "deno compile --allow-ffi --output ./bin/gem-catcher ./games/gem-catcher/main.ts"
  },
  "imports": {
    "@libs/xml": "jsr:@libs/xml@^7.0.3"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "webworker"
    ]
  },
  "permissions": {
    "default": {
      "ffi": true,
      "read": true
    }
  },
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./r-audio": "./src/core/r-audio.ts",
    "./r-core": "./src/core/r-core.ts",
    "./r-math": "./src/core/r-math.ts",
    "./r-models": "./src/core/r-models.ts",
    "./r-shapes": "./src/core/r-shapes.ts",
    "./r-text": "./src/core/r-text.ts",
    "./r-textures": "./src/core/r-textures.ts"
  }
}
